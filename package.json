{
    "name": "lwc-open-source-with-heroku",
    "version": "0.0.0",
    "author": "Tarandeep Singh",
    "bugs": "https://github.com/Tdssaini/lwc-open-source-with-heroku/issues",
    "dependencies": {
        "@salesforce/eslint-config-lwc": "^0.4.0",
        "canvas": "^2.6.0",
        "dotenv": "^8.2.0",
        "eslint": "^5.16.0",
        "jsdom": "^16.5.0",
        "jsforce": "^1.9.3",
        "lwc-services": "^1.3.12",
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {},
    "engines": {
        "node": ">=10.0.0"
    },
    "homepage": "https://github.com/Tdssaini/lwc-open-source-with-heroku",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    },
    "nodemonConfig": {
        "watch": [
            "src/server/**/*.js",
            "scripts/express-dev.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./scripts/express-dev.js"
    },
    "repository": "tdssaini/lwc-open-source-with-heroku",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write '**/*.{css,html,js,json,md,ts,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{css,html,js,json,md,ts,yaml,yml}'",
        "serve": "lwc-services serve",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
